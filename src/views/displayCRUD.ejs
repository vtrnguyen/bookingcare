<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get all user</title>
</head>

<style>
    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
    }
    .btn-edit, .btn-delete {
        cursor: pointer;
        border-radius: 5px;
        width: 60px;
        height: 25px;
    }
    .btn-edit {
        background: orange;
        
    }
    .btn-delete {
        background: #ccc;
    }
</style>

<body>
    <table style="width:100%">
        <tr>
            <th>Email</th>
            <th>First name</th>
            <th>Last name</th> 
            <th>Address</th>
            <th>Action</th>
        </tr>
        
        <% for(let i = 0; i < dataTable.length; i++) { %>
            <tr>
                <td><%= dataTable[i].email %></td>
                <td><%= dataTable[i].firstName %></td>
                <td><%= dataTable[i].lastName %></td>
                <td><%= dataTable[i].address %></td>
                <td>
                    <a href="/edit-crud?id=<%= dataTable[i].id %>" class="btn-edit" type="button">Edit</a>
                    <button class="btn-delete" type="button">Delete</button>
                </td>
            </tr>
        <% } %>

    </table>
    <a href="/">Home</a>
</body>
</html>